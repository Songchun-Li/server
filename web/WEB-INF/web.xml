<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>QuizController</servlet-name>
        <servlet-class>com.li.penguin.interactive.QuizController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuizController</servlet-name>
        <url-pattern>/quiz</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DispController</servlet-name>
        <servlet-class>com.li.penguin.display.DispController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DispController</servlet-name>
        <url-pattern>/disp</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RFIDUpdater</servlet-name>
        <servlet-class>com.li.penguin.rfid.RFIDUpdater</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RFIDUpdater</servlet-name>
        <url-pattern>/rfid</url-pattern>
    </servlet-mapping>

</web-app>